cosmo: {Om0: 0.26, flat: True}

source:
    plugin: Source.NBKit
#    path: ${NBKIT_CACHE}/data/tpm_1.0000.bin.*
#    filetype: FileType.TPM

    path: ${NBKIT_CACHE}/data/fastpm_1.0000
    filetype: FileType.BigFile

    args :
        header : 'header'

    transform :
        Position : ds['Position'] # * attrs['BoxSize']
        RSDPosition : (ds['Position'] + attrs['RSDFactor'] * ds['Velocity'] * [0, 0, 1]) # * attrs['BoxSize']
#    attrs :
#        BoxSize : 384.0

    enable_dask : false

    painter :
        paintbrush : lanczos2
columns:
    - Position
    - RSDPosition
    - Velocity

output: "-"
    #${NBKIT_HOME}/examples/output/test_describe.dat
